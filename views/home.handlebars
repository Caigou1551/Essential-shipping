<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-4">
    <h1>All Products</h1>

    <!-- ðŸ”¥ Search Form -->
    <form class="row g-3 mb-4" method="GET" action="/home">
      <div class="col-auto">
        <input type="text" name="search" class="form-control" placeholder="Search products..." value="{{search}}">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Search</button>
      </div>
    </form>

    <div class="row">
      {{#each products}}
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">{{product_name}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{brand_name}}</h6>
              <p class="card-text">
                Category: {{category}}<br>
                Price: ${{price}}<br>
                Availability: {{availability}}
              </p>
              <a href="/product/{{product_id}}" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
