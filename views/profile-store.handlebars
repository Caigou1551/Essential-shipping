    <div class="container mt-4">
      <h2>Welcome, {{store.store_name}} of {{store.location}}</h2>
      <p class="text-muted">Username: {{store.username}}</p>
      
      <div class="row">
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-header">
              <h4>Store Information</h4>
            </div>
            <div class="card-body">
              <form action="/store/profile/update" method="POST">
                <div class="mb-3">
                  <label for="store_name" class="form-label">Store Name</label>
                  <input type="text" class="form-control" id="store_name" name="store_name" value="{{store.store_name}}" required>
                </div>
                <div class="mb-3">
                  <label for="location" class="form-label">Location</label>
                  <input type="text" class="form-control" id="location" name="location" value="{{store.location}}" required>
                </div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
              </form>
            </div>
          </div>
        </div>

